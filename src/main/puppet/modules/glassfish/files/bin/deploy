#!/bin/sh
set -e
                                                                                                                        
echo "Will deploy" $*
cd /home/dmf/install/unpack

rm -rf $2
unzip ../distro/${3}
cd $2
touch configured

if [ $# -ge 4 ]; then
	cp ../../config/${4} .
fi

if [ $# -ge 5 ]; then
	cp -r ../../config/${5} .
fi

if [ $1 = "root" ]; then
	python setup install -v
else
	chown -R $1:$1 .
	su dmf -c "python setup install -v"
fi
